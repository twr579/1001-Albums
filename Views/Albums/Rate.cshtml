@model _1001Albums.Models.UserRating

@{
    ViewData["Title"] = "Rate";
}

<h1>Rate @Model.Album.Title</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Rate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="AlbumId" />
            <input type="hidden" asp-for="UserId" />
            <div class="form-group">
                <div>
                    <input asp-for="Rating" type="radio" value="0" id="rating-0" />
                    <label for="rating-0">No Rating</label>
                </div>
                @{
                    foreach (int i in Enumerable.Range(1, 10))
                    {
                        <div>
                            <input asp-for="Rating" type="radio" value="@i" id="rating-@i" />
                            <label for="rating-@i">@i</label>
                        </div>
                    }
                }
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
